<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Text Styles-->
    <style name="textMediumBoldDark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>

        <item name="fontFamily">@font/sofia_pro_bold</item>
    </style>

    <style name="textMediumDark">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="fontFamily">@font/sofia_pro_medium</item>
    </style>

    <style name="textMediumBoldLighter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>

        <item name="fontFamily">@font/font_sofia_pro</item>
    </style>

    <style name="textMediumLighter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="fontFamily">@font/font_sofia_pro</item>
    </style>

    <style name="toolbarTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="fontFamily">@font/font_sofia_pro</item>
    </style>

    <!--Cards-->
    <style name="cardsStyleOne">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardElevation">2dp</item>
    </style>



</resources>