<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DzNetStats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background
        </item><!--The background color appears behind scrollable content.-->

        <item name="fontFamily">@font/font_sofia_pro</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.DzNetStats.Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorAccentAlt</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/launcher_ic</item>
        <item name="postSplashScreenTheme">@style/Theme.DzNetStats</item>
    </style>

</resources>